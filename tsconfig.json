{
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "noUnusedLocals": false,
    "paths": {
      "App/*": ["./app/*"],
      "Contracts/*": ["./contracts/*"]
    },
    "types": ["@adonisjs/core", "@adonisjs/lucid"]
  }
}
